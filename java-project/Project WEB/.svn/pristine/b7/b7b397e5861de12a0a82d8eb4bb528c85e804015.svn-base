/* ########## GLOBAL ########## */
:root {
	 /* Main Colors */
	--main-color:		#0093F9;
	--main-bg-color:	#F5F5F5;
	--error-color:		#FF9B94;
	--disabled-color:	#A8A8A8;
	
	/* Icon Colors */
	--icon-color:		#005999; /* #616161 */
	--icon-hover-color:	#4FB7FF;
	
	/* Menu Colors */
	--menu-icon-color:	 var(--main-color); /* #0064ED; */
	--menu-border-color: #D9D9D9;
	--menu-bg-color:	 #FFFFFF;
	
	--settings-bg-color: #DADEE6;
	
	/* Table Colors */
	--table-bg-color:	#F6F6F6;
	--table-hb-color:	#0077CC; /* Header border color */
	--table-row-hover:	#F2F2F2;
	--table-row-select: #F2F2F2;
}

/* ########## PANELS ########## */
.z-panel, .z-panel-body, .z-panelchildren, .z-window {
    padding: 0;
}

.z-north, .z-south, .z-east, .z-west, .z-center {
	padding: 5px;
	/* border: none; */
}

.z-north-body, .z-south-body, .z-east-body, .z-west-body, .z-center-body {
	padding: 0;
}

.z-north-collapsed, .z-south-collapsed, .z-east-collapsed, .z-west-collapsed, .z-center-collapsed {
    padding: 0;
}

/* ########## TABLES ########## */
.z-listheader-content {
	padding: 5px 16px;
}

.z-listcell-content {
	padding: 0px 16px;
}

/* ########## FIELDS ########## */
.z-textbox, .z-intbox, .z-combobox, .z-combobox-input, .z-combobox-button {
	height: 25px;
}

input[type="checkbox"]:checked:before {
	font-size: 10pt;
	position: absolute;
}

/* ########## BUTTONS ########## */
.z-button {
	padding: 0 16px;
}
.z-combobox-button {
	padding-top: 4px;
}

.icon {
	font-family: ZK85Icons,FontAwesome;
	font-size: 20pt;
	color: #0093f9;
	cursor: pointer;
}

.header-icon {
	font-family: ZK85Icons,FontAwesome;
	color: white;
}

.leftMenuHead th div {
	padding: 0 !important;
	margin: 0 !important;
}

.icon-message:before {
	content: '\f0e0';
}

/*  */

.icon:hover {
	color: #4fb7ff;
}

.icon-add:before {
	content: '\f055';
}

.icon-search:before {
	content: '\f002';
}

.icon-edit {
	font-size: 15pt;
}
.icon-edit:before {
	/*content: '\f044';*/
	content: '\f085';
}

.icon-reset {
	font-size: 16pt;
}

.icon-reset:before {
	content: '\f0e2';
}

.icon-delete:before {
	content: '\f057';
}

.icon-delete:hover {
	color: red;
}

.icon-active:before {
	content: '\f00c';
	color: green;
	font-weight: bold;
}

.icon-inactive:before {
	content: '\f00d';
	color: red;
	font-weight: bold;
}

.icon-car:before {
	content: '\f1b9';
	font-size: 10pt;
}

.icon-alpha:before {
	content: '\f15d';
	font-size: 10pt;
}

.icon-position:before {
	content: '\f041';
	font-size: 10pt;
}

.icon-right-arrow:before {
	content: '\f0a9';
	font-size: 10pt;
}

.icon-signal:before {
	content: '\f012';
	font-size: 10pt;
}

.icon-speedometer:before {
	content: '\f0e4';
	font-size: 10pt;
}

.icon-power:before {
	content: '\f0e7';
	font-size: 10pt;
}

.icon-flag:before {
	content: '\f11e';
	font-size: 10pt;
}

.icon-chart:before {
	content: '\f080';
	font-size: 10pt;
}

.icon-menu:before {
	content: '\f0c9';
	font-size: 10pt;
}

.icon-dropdown:before {
	content: '\f13a';
	font-size: 10pt;
}

.icon-file:before {
	content: '\f15c';
	font-size: 10pt;
}

.icon-shape {
	height: 10pt;
	width: 10pt;
}

.checkbox-list div {
	padding: 0;
}

.checkbox input {
	height: 10pt;
	width: 10pt;
}

/* ########## MENUS ########## */
.z-menubar, .z-menubar-horizontal {
	border: none;
}

/* ########## SEPARATORS ########## */
.z-separator {
	width: 10pt;
}

tr {
	vertical-align: middle;
}

/* ########## MAIN ########## */
.main_container {
	background-color: var(--main-bg-color);
}

/* ########## MENU ########## */
.menu_container {
	max-width: 250pt;
	min-width: 40pt;
	border-right: 1px solid var(--menu-border-color);
	box-shadow: 5pt 0pt rgba(204, 204, 204, 0.2);
	border-top: none;
	background-color: var(--menu-bg-color);
}

.settings_container  {
	background-color: var(--settings-bg-color);
}

.nav_menu {
	border: none !important;
}

.nav_menu .z-row .z-cell {
	border: none !important;
}

.menu_parent_label {
	font-weight: bold;
	font-size: 15pt;
	font-family: Helvetica, Times, serif;
}

.menu_child_label {
	padding-left: 15pt;
	font-size: 15pt;
	font-family: Helvetica, Times, serif;
}

.menu_logo {
	text-align: center;
}

.menu_logo:hover {
	background: black;
}

.menu_logo img {
	margin-bottom: 40pt;
	height: 130pt;
	width: 170pt;
}

.settings_profile, .settings_messages {
	display: inline-block;
	padding: 0pt 10pt;
}

.settings_profile, .settings_profile span {
	float: right;
}

.settings_profile span {
	color: white;
	font-weight: bold;
	border-radius: 50%;
	font-size: 12pt;
	background: #406D86;
	padding: 6pt 6pt 6pt 6pt;
	cursor: pointer;
}
