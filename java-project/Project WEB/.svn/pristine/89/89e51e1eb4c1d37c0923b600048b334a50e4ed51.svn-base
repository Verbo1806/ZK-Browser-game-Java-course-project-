/* ########## GLOBAL ########## */
:root {
	 /* Main Colors */
	--main-bg-color:	#F5F5F5;
	--error-color:		#FF9B94;
	--disabled-color:	#A8A8A8;
	
	/* Icon Colors */
	--icon-color:	 #3465A4;
	--icon-hover-color:	 #729FCF;
	
	/* Menu Colors */
	--menu-border-color: #D9D9D9;
	--menu-bg-color:	 #FFFFFF;
	
	--settings-bg-color: #DADEE6;
	
	/* Table Colors */
	
	/* West Size */
	--west-size:	250pt;
}

/* ########## PANELS ########## */
body {
	padding: 0pt;
}

.z-west {
	height: 100% !important;
	top: 0pt !important;
}

.z-west-body {
	height: 100% !important;
}

.z-north {
	width: 100% !important;
	left: var(--west-size) !important;
}

.z-north-body {
	width: calc(100% - var(--west-size)) !important;
	padding: 0pt;
}

/* ########## TABLES ########## */
.z-listheader-content {
	padding: 5px 16px;
}

.z-listcell-content {
	padding: 0px 16px;
}

/* ########## FIELDS ########## */
.z-textbox, .z-intbox, .z-combobox, .z-combobox-input, .z-combobox-button {
	height: 25px;
}

input[type="checkbox"]:checked:before {
	font-size: 10pt;
	position: absolute;
}

.label_button {
	color: var(--icon-color);
	font-weight: bold;
	text-transform: uppercase;
	cursor: pointer;
}

/* ########## BUTTONS ########## */
.z-button {
	padding: 0 16px;
}
.z-combobox-button {
	padding-top: 4px;
}

.icon {
	font-family: ZK85Icons,FontAwesome;
	font-size: 20pt;
	color: var(--icon-color);
	cursor: pointer;
}

.icon:hover {
	color: var(--icon-hover-color);
}

.header-icon {
	font-family: ZK85Icons,FontAwesome;
	color: white;
}

.leftMenuHead th div {
	padding: 0 !important;
	margin: 0 !important;
}

.icon-message:before {
	content: '\f0e0';
	font-size: 25pt;
}

.icon-edit:before {
	/*content: '\f044';*/
	content: '\f044';
}

/*  */

.icon-add:before {
	content: '\f055';
}

.icon-search:before {
	content: '\f002';
}

.icon-reset {
	font-size: 16pt;
}

.icon-reset:before {
	content: '\f0e2';
}

.icon-delete:before {
	content: '\f057';
}

.icon-delete:hover {
	color: red;
}

.checkbox-list div {
	padding: 0;
}

.checkbox input {
	height: 10pt;
	width: 10pt;
}

/* ########## MENUS ########## */
.z-menubar, .z-menubar-horizontal {
	border: none;
}

/* ########## SEPARATORS ########## */
.z-separator {
	width: 10pt;
}

tr {
	vertical-align: middle;
}

/* ########## MAIN ########## */
.main_container {
	background-color: var(--main-bg-color);
}

/* ########## MENU ########## */
.menu_container {
	max-width: var(--west-size);
	min-width: 40pt;
	border-right: 1px solid var(--menu-border-color);
	box-shadow: 5pt 0pt rgba(204, 204, 204, 0.2);
	border-top: none;
	background-color: var(--menu-bg-color);
}

.settings_container  {
	background-color: var(--settings-bg-color);
}

.nav_menu {
	border: none !important;
}

.nav_menu .z-row .z-cell {
	border: none !important;
}

.menu_parent_label, .menu_child_label {
	font-size: 15pt;
	font-family: Helvetica, Times, serif;
	cursor: pointer;
}

.menu_parent_label {
	font-weight: bold;
}

.menu_child_label {
	padding-left: 15pt;
}

.menu_logo {
	text-align: center;
	cursor: pointer;
}

.menu_logo:hover > .z-cell {
	background: none;
}

.menu_logo img {
	margin-bottom: 40pt;
	height: 130pt;
	width: 170pt;
}

.settings_menu_parent {
	height: 100%;
	display: flex;
    align-items: center;
    justify-content: flex-end;
}

.settings_profile, .settings_messages {
	display: inline-block;
	padding: 0pt 10pt;
}

.settings_profile, .settings_profile span {
	float: right;
}

.settings_profile span {
	color: white;
	font-weight: bold;
	border-radius: 50%;
	font-size: 15pt;
	background: var(--icon-color);
	padding: 6pt 4pt;
	cursor: pointer;
}
